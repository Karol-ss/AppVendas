@model IEnumerable<AppVendasWeb.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<h1 class="display-5 text-light my-5">Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotaFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataVenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.ClienteNome)
                </td>
                <td>
                    <a class="text-decoration-none link-light btn btn-outline-light"
                       asp-controller="ItensDaVenda" asp-action="Index" asp-route-id="@item.VendaId">
                        <svg class="mx-1" bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar"></svg>
                        Novo Item
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.VendaId" class="btn btn-outline-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.VendaId" class="btn btn-outline-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.VendaId" class="btn btn-outline-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
