@model AppVendasWeb.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="display-5 text-light my-5">Deletar</h1>

<h3>Você tem certeza que quer deletar?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
